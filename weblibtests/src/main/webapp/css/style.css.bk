/* ------------------------------------------------------------
    MAIN
------------------------------------------------------------- */

a:hover {border-bottom:1px dotted #FFFFFF;}
a:focus {background : none repeat scroll 0 0 #1E90FF;}
a {
color : #000000;
text-decoration : none;
outline : none;
}

html, body, #page, #top, #prelude, #wrapper, #footer, #main, #content, #sidebar, #blognav, #blogextra {
margin : 0;
padding : 0;
}

body {
margin: 0px;
padding: 0;
background: #fafef7;
font-family: Arial, Helvetica, sans-serif;
font-size: 1em;
color: #464646;
}

p {
margin : 20px 0 20px 0;
padding : 10px;
}

img {
border: 0 none;
}

h1{
font-size: 30px;
line-height: 25px;
color: #0a2700;
}

.clearboth {
    clear: both;
}

