/* ------------------------------------------------------------
    TABLE
------------------------------------------------------------- */

th, td
{
    padding: 3px;
}

th.column_top
{
    font-weight: bold;
    text-align: center;
    background: #0a2700;
    border: 0 none;
    color: #ffffff;
}

th.done {
    background: none repeat scroll 0 0 #F7F5F2;
    color: #0A2700;
    font-weight: bold;
    margin: 0 5px 0 0;
    text-align: center;
}

td.done {
    font-weight: bold;
}



td.done a {
color : #0000ff;
text-decoration : none;
border-bottom: 2px solid #0000ff;
}

/* ------------------------------------------------------------
    TABLE
------------------------------------------------------------- */
.time_table {
    width: 90%;
}

.time_table td.column_top
{
    font-weight: bold;
    text-align: center;
    background: #0a2700;
    border: 0 none;
    color: #ffffff;
}

.time_table td.no_border
{
    border: 0 none;
}

.time_table td.schedule
{
    font-weight: bold;
    text-align: center;
    background: #dddddd;
    color: #0a2700;
    margin: 0 5px 0 0;
}

/* ------------------------------------------------------------
    LANG
------------------------------------------------------------- */

#form_lang label {
    display: block;
}

#form_lang {
    background: none repeat scroll 0 0 #808000;
    display: block;
    float: right;
    margin: 10px;
    padding: 10px;
    width: 200px;
    -moz-border-radius: 10px;
    -webkit-border-radius: 10px;
    border-radius: 10px;
    behavior: url(./PIE-1.0beta5/PIE.htc);
}

select#lang {
    color: #6A6969;
    font-size: 15px;
    font-weight: bold;
    margin: 10px 0;
    width: 100%;
}



