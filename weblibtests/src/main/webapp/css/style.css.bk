/* ------------------------------------------------------------
    BUTTON
------------------------------------------------------------- */

.clear { /* generic container (i.e. div) for floating buttons */
overflow: hidden;
width: 100%;
}
a.button {
background: transparent url('../img/2.gif') no-repeat scroll top right;
color: #ffffff;
display: block;
float: left;
font: normal 16px arial, sans-serif;
font-weight:bold;
height: 55px;
margin-right: 6px;
padding-right: 19px; /* sliding doors padding */
text-decoration: none;
min-width:200px;
}
a.button span {
background: transparent url('../img/1.gif') no-repeat;
display: block;
padding: 20px 0 20px 18px;
}
a.button:hover {
background: transparent url('../img/4.gif') no-repeat scroll top right;
color: #ffffff;
outline: none; /* hide dotted outline in Firefox */
}
a.button:hover span {
background: transparent url('../img/3.gif') no-repeat;
padding: 20px 0 20px 18px; /* push text down 1px */
}

